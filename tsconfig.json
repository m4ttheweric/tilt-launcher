{
  // TypeScript 7 native preview (tsgo) recommended config
  // Adapted for Svelte 5 + Vite 7 + Tailwind v4

  "compilerOptions": {
    // Environment â€” Vite handles bundling, we only type-check
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,

    // Stricter typechecking (tsgo defaults)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,

    // Module behavior
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"]
}
