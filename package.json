{
  "name": "tilt-launcher",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "bun run check && bun run lint && vite build",
    "preview": "vite preview",
    "check": "tsgo --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "server": "node tilt-launcher.mjs",
    "release": "./release.sh",
    "release:dry": "./release.sh --dry-run",
    "prepare": "echo '#!/bin/bash\nexec \"$(git rev-parse --show-toplevel)/hooks/pre-commit\"' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit || true"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260213.1",
    "eslint": "^10.0.0",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "svelte": "^5.50.3",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  }
}
